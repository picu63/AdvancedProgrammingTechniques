    <TargetFramework>netcoreapp3.1</TargetFramework>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="ConfigFile.xml" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="ConfigFile.xml">
